#!/usr/bin/env bash

set -e

export SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=${MICRO_AUTH_ISSUER_URI}
export CRYPTO_SECRETKEYBASE64=${MICRO_AUTH_SECKEY}
export SPRING_DATASOURCE_URL=${MICRO_AUTH_DB_URL}
export SPRING_DATASOURCE_USERNAME=${MICRO_AUTH_DB_USERNAME}
export SPRING_DATASOURCE_PASSWORD=${MICRO_AUTH_DB_PASSWORD}

mvnd -f simpl-repo/agent-service/ -Dmaven.test.skip spring-boot:run -Dspring-boot.run.profiles="${MICRO_PROFILES}" "$@"
